<header>
    <div class="container">
        <div class="logo">
            <a asp-controller="home" asp-action="index">
                <img src="images/logo.svg" alt="">
                <span>bmerketo</span>
            </a>
        </div>
        <nav id="menu" class="menu-links">
            <a class="link" asp-controller="home" asp-action="index">HOME</a>
            <a class="link" asp-controller="products" asp-action="index">PRODUCTS</a>
            <a class="link" asp-controller="about" asp-action="contact">CONTACT</a>
        </nav>
        <nav class="menu-icons">
            <a class="link" asp-controller="products" asp-action="search"><i class="fa-regular fa-search"></i></a>
            <a class="link" asp-controller="account" asp-action="index">Login</a>
            <a class="link" asp-controller="shopping" asp-action="index"><i class="fa-solid fa-cart-shopping"></i></a>
        </nav>
        <div class="toggle">
            <button class="btn-toggle btn-outline-white" data-option="toggle" data-target="#menu">
                <i id="icon" class="fa-regular fa-bars"></i>
            </button>
        </div>
    </div>
</header>
<script>toggleMenuButton('[data-option="toggle"]')</script>